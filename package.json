{
  "name": "speechless",
  "version": "0.0.3",
  "description": "Speech to text recognition tool native/external",
  "keywords": [
    "speech",
    "speech-to-text",
    "text",
    "recognition",
    "speech-recognition",
    "speechRecognition"
  ],
  "main": "dist/speechless.min.js",
  "module": "dist/speechless.min.js",
  "typings": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "author": "Shy <puemos@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/puemos/speechless.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "precommit": "lint-staged",
    "prepush": "npm run test:prod && npm run build",
    "lint": "tslint -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "prebuild": "rimraf dist",
    "build": "tsc && webpack && webpack --env.prod && rimraf compiled && typedoc --out dist/docs --target es6 --theme minimal src",
    "start": "tsc -w & webpack -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:prod": "npm run lint && npm run test -- --coverage --no-cache",
    "deploy-docs": "ts-node tools/gh-pages-publish",
    "report-coverage": "cat ./coverage/lcov.info | coveralls"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write --no-semi --single-quote",
      "git add"
    ]
  },
  "jest": {
    "moduleNameMapper": {
      "web-recorder": "<rootDir>/test/__mocks__/RecorderMock.ts"
    },
    "setupFiles": [
      "./test/setup/setup.js"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverage": true,
    "mapCoverage": true
  },
  "devDependencies": {
    "@types/jest": "21.1.6",
    "@types/node": "8.0.54",
    "@types/webspeechapi": "0.0.28",
    "babel-jest": "^21.2.0",
    "coveralls": "3.0.0",
    "cross-env": "5.1.1",
    "husky": "0.14.3",
    "jest": "21.2.1",
    "jest-cli": "^21.2.1",
    "jsdom": "11.3.0",
    "lint-staged": "6.0.0",
    "prettier": "1.8.2",
    "rimraf": "2.6.1",
    "speech-recognition-mock": "0.0.4",
    "standardized-audio-context-mock": "^3.1.8",
    "ts-jest": "21.2.4",
    "ts-loader": "^3.1.1",
    "tslint": "5.8.0",
    "tslint-config-prettier": "1.6.0",
    "tslint-config-standard": "7.0.0",
    "typedoc": "0.9.0",
    "typescript": "2.6.1",
    "uglifyjs-webpack-plugin": "^1.0.1",
    "webpack": "^3.8.1",
    "webpack-config-utils": "^2.3.0"
  },
  "dependencies": {
    "web-recorder": "0.0.4"
  }
}
