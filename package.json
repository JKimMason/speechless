{
  "name": "speechless",
  "version": "0.2.1",
  "description": "Speech to text recognition with remote fallback (Native/External)",
  "keywords": [
    "speech",
    "speech-to-text",
    "text",
    "recognition",
    "speech-recognition",
    "speechRecognition"
  ],
  "main": "dist/speechless.umd.js",
  "module": "dist/speechless.es5.js",
  "typings": "dist/types/speechless.d.ts",
  "files": [
    "dist"
  ],
  "author": "Shy <puemos@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/puemos/speechless.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "precommit": "lint-staged && npm run build",
    "prepush": "npm run test:prod && npm run build",
    "lint": "tslint -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "prebuild": "rimraf dist",
    "build": "tsc && rollup -c rollup.config.ts && rimraf compiled && typedoc --out dist/docs --target es6 --theme minimal src",
    "start": "tsc -w & rollup -c rollup.config.ts -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:prod": "npm run lint && npm run test -- --coverage --no-cache",
    "deploy-docs": "ts-node tools/gh-pages-publish",
    "build-demo": "ts-node tools/build-demo",
    "report-coverage": "cat ./coverage/lcov.info | coveralls"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write --no-semi --single-quote",
      "git add"
    ],
    "{demo}/**/*.js": [
      "prettier --write --no-semi --single-quote",
      "git add"
    ]
  },
  "jest": {
    "moduleNameMapper": {
      "web-recorder": "<rootDir>/test/__mocks__/RecorderMock.ts"
    },
    "setupFiles": [
      "./test/setup/setup.js"
    ],
    "transform": {
      ".+\\.js$": "babel-jest",
      ".+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverage": true,
    "mapCoverage": true
  },
  "devDependencies": {
    "@types/jest": "21.1.6",
    "@types/node": "8.5.1",
    "@types/webspeechapi": "0.0.28",
    "babel-jest": "22.0.0",
    "coveralls": "3.0.0",
    "cross-env": "5.1.1",
    "husky": "0.14.3",
    "jest": "21.2.1",
    "jest-cli": "21.2.1",
    "jsdom": "11.3.0",
    "lint-staged": "6.0.0",
    "prettier": "1.9.2",
    "rimraf": "2.6.1",
    "rollup": "^0.52.1",
    "rollup-plugin-commonjs": "^8.2.6",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "speech-recognition-mock": "0.0.4",
    "standardized-audio-context-mock": "3.1.20",
    "ts-jest": "21.2.4",
    "ts-node": "4.0.2",
    "tslint": "5.8.0",
    "tslint-config-prettier": "1.6.0",
    "tslint-config-standard": "7.0.0",
    "typedoc": "0.9.0",
    "typescript": "2.6.1",
    "uglifyjs-webpack-plugin": "1.1.4"
  },
  "dependencies": {
    "web-recorder": "0.0.7"
  }
}
